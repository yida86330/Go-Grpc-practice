{
    "swagger": "2.0",
    "info": {
        "description": "This is a sample server for a Gin-Gonic API with gRPC integration.",
        "title": "Gin-Gonic API with gRPC",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api/v1",
    "paths": {
        "/comments": {
            "get": {
                "description": "獲取留言",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "留言"
                ],
                "summary": "獲取留言",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/controllers.CommentsResponse"
                        }
                    }
                }
            },
            "post": {
                "description": "發布留言",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "留言"
                ],
                "summary": "發布留言",
                "parameters": [
                    {
                        "description": "留言内容",
                        "name": "comment",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/controllers.CommentRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/controllers.CommentResponse"
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "description": "登入",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "使用者"
                ],
                "summary": "登入",
                "parameters": [
                    {
                        "description": "login",
                        "name": "username",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/controllers.LoginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/controllers.LoginResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/controllers.LoginResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "controllers.Comment": {
            "type": "object",
            "properties": {
                "author": {
                    "type": "string",
                    "example": "John"
                },
                "created_at": {
                    "type": "string",
                    "example": "2022-01-01T12:00:00Z"
                },
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "message": {
                    "type": "string",
                    "example": "Hello"
                }
            }
        },
        "controllers.CommentRequest": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "Hello"
                }
            }
        },
        "controllers.CommentResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "1"
                }
            }
        },
        "controllers.CommentsResponse": {
            "type": "object",
            "properties": {
                "comments": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/controllers.Comment"
                    }
                }
            }
        },
        "controllers.LoginRequest": {
            "type": "object",
            "properties": {
                "password": {
                    "type": "string",
                    "example": "password"
                },
                "username": {
                    "type": "string",
                    "example": "user1"
                }
            }
        },
        "controllers.LoginResponse": {
            "type": "object",
            "properties": {
                "token": {
                    "type": "string",
                    "example": "abc123"
                }
            }
        }
    }
}